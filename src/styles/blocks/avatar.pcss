.avatar {
    border-radius: 50%;
    overflow: hidden;

    &__img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
}

.user-info {
    width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-info__avatar {
    width: 200px;
    margin-bottom: 80px;
}

.user-info__data {
    color: $white;
    font-size: 16px;
    font-weight: 400;
    line-height: 30px;
}

.t-col {
    width: 150px;
    opacity: 0.5;
}