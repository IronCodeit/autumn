.hero {
    min-height: 650px;
    position: relative;
    height: 100vh;

    &__content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
}

.hero__bottom-btn {
    color: $white;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}