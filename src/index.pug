include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page.
    link(rel="stylesheet", href="main.css")
  body
    .wrapper
      .welcome-section
        section.hero
          .container
            header.header
              .header__logo
                .logo МД
              .header__btns
                nav.menu
                  - var items = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
                  ul.menu__list
                    each item in items
                      li.menu__item
                        a.menu__link #{item}
              .header__links
                  - var icons = ['Instagram', 'Vkontakte', 'Github'];
                  ul.socials
                    each item in icons
                      li.socials__item
                        a(href="").socials__link
                          +icon(item, "socials__icon")
            .hero__content
              .user-data
                .user-data__desk Личный сайт вэб разработчика
                h1.title.title-hero Дмитрий Малуда
            .hero__bottom-btn
              a(href="").scroll-down-btn Скролл
              +icon("Scroll", "scroll__icon")
        section.about-section
          .container
            .about
              .about__user-data
                .user-info
                  .user-info__avatar
                    .avatar
                      +image('content/user.jpg', 'avatar__img')
                  .user-info__content
                    - 
                      var userdata = [
                        ["Проживаю:", "Рыбница"],
                        ["Возраст:", "32 года"],
                        ["Родился:", "22 декабря 1987"]
                      ];
                    table.user-info__data
                      tbody.user-info__data-body
                        each row in userdata
                          tr
                            td.t-col #{row[0]}
                            td #{row[1]}
                            td #{row[2]}
              .about__user-content
                .about__author
                  .about__hello Привет, меня зовут
                  h2.title.title-about Дмитрий Малуда
                  p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__desk
                  blockquote Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                  +icon("st", "st__icon")
      section.texture
      section.values
        .values-left
          .values-left__avatar
            +image('content/bg-hands.png', 'values__img')
        .values-right
          .values-right__title
            .values-section__title-content
              .longtitle
                h2.longtitle__text Чем я могу быть полезен вам
                .longtitle__desk
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          .values-right__content
            - 
              var items = [
                ["Front-end", [{title: "HTML5", perc: '190'}, {title: "CSS3", perc: '80'}, {title: "Javascript", perc: '100'}, {title: "Jquery и Vue.js", perc: '175'}]],
                ["Workflow", [{title: "GIT", perc: '150'}, {title: "Terminal", perc: '100'}, {title: "Gulp", perc: '170'}, {title: "Webpack", perc: '350'}]]
              ];

            ul.skills-list
              each row in items
                li.skills-list__item.skills-row
                  .skills-row__title #{row[0]}
                  ul.skills-row__list
                    each cell in row[1]
                      li.skills-row__item
                        .skill #{cell.title}
                        svg(width="134" height="134").skill__title= cell
                          circle(cx="67" cy="67" r="57" fill="transparent" stroke="#ccc").skill__title--icon.skill__title--icon-under
                          circle(cx="67" cy="67" r="57" fill="transparent" stroke="url(#lgradient)" stroke-dashoffset=`${cell.perc}%`).skill__title--icon.skill__title--icon-above
                          defs
                            linearGradient(id='lgradient')
                              stop(offset="0%" stop-color="#d0731b")
                              stop(offset="100%" stop-color="#dc9322")
      section.sliders